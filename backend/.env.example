# .env.example
# This file serves as a template for the required environment variables.
# For local development, copy this file to .env and fill in the values.
# In production, these variables should be set directly in the environment.

# --- Django Core Settings ---
# Generate a new, strong secret key for production.
# Command: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=
# Set to False in production!
DEBUG=False
# Comma-separated list of allowed hostnames (e.g., yourdomain.com,www.yourdomain.com)
ALLOWED_HOSTS=127.0.0.1,localhost

# --- Database Settings (PostgreSQL) ---
# DB_NAME=qr_db
DB_NAME=quarterly_report_db
DB_USER=qr_user
DB_PASSWORD=qr_password
DB_HOST=db
DB_PORT=5432

# --- CORS Settings ---
# The frontend URL for production (e.g., https://your-frontend-app.com)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# --- Email Settings (for sending verification emails) ---
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# --- Frontend URL ---
# The base URL of your frontend application for generating verification links.
# Use HTTPS for production.
FRONTEND_BASE_URL=http://localhost:5173

